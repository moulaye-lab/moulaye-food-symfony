{% extends "base.html.twig" %}

{% block title %}Ajouter restaurants{% endblock %}


{% block body %}
    
    <h3 class="mt-5 ml-20">Vous avez  {{totalTables | length}}   Tables </h3>

    <div class="row  mt-5 ">
        <div class="col-md-6 mx-auto">
            {{form_start(nbresTables)}}
                {{form_row(nbresTables.nombresTables)}}
                

                <button type="submit" class="btn btn-primary btn-block"> 
                
                    Ajouter
             
                </button>
            
            {{form_end(nbresTables)}}
                          
                  

        </div>
</br>
           
            <table class="table table-striped mt-5">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Nom</th>
      <th scope="col">Numero de table</th>
      <th scope="col"></th>
      <th scope="col">Actions</th>

    </tr>
  </thead>
   {% for tables in totalTables %}
  <tbody>
  
    <tr>
      <th scope="row">{{tables.id}}</th>
      {% if tables.Nom == null %}
      <td>Aucun Nom de table</td>
      {% else %}
        
        <td>{{tables.Nom}}</td>
  
      {% endif %}
      <td>{{tables.Numero}}<td>
       <td><a href="#">Editer</a> </br> <a href="#"> Supprimer </a></td>
    </tr>
    
  </tbody>
  {% endfor %} 
    
</table>


{% endblock %}