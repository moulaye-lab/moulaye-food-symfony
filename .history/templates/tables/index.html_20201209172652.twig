  <thead>
    <tr>
      <th scope="col">Type</th>
      <th scope="col">Column heading</th>
      <th scope="col">Column heading</th>
      <th scope="col">Column heading</th>
  {% for tables in totalTables %}
  <tbody>
    <tr>
      <th scope="row">{{tables.id}}</th>
      {% if tables.Nom == null %}
      <td>Aucun Nom de table</td>
      {% else %}
        
        <td>{{tables.Nom}}</td>
  
      {% endif %}
      <td>{{tables.Numero}}<td>
      <td><a href =""> Editer </a> </br> <a href =""> Supprimer </a>  <td>

    </tr>
    
  </tbody>
  {% endfor %}
</table>
</div>
        
          
                       

    </div>

{% endblock %}