{% extends "base.html.twig" %}

{% block title %}Ajouter restaurants{% endblock %}


{% block body %}
    

    <div class="row  mt-5 ">
        <div class="col-md-6 mx-auto">
            {{form_start(nbresTables)}}
                {{form_row(nbresTables.nombresTables)}}
                

                <button type="submit" class="btn btn-primary btn-block"> 
                
                    Ajouter
             
                </button>
            
            {{form_end(nbresTables)}}
                          
                  

        </div>

           <div class="row">
        
        {% for tables in totalTables %}
            <div class="col-md-12">
            <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Nom</th>
      <th scope="col">Numero de table</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">{{tables.id}}</th>
      <td>{{tables.Nom}}</td>
      <td>{{tables.Numero}}/td>
    </tr>
    
  </tbody>
</table>
</div>
        {% endfor %}
          
                       

    </div>

{% endblock %}