{% extends 'base.html.twig' %}

{% block title %}Gestion du menu{% endblock %}

{% block body %}

{% if categories|length > 0 %}
    
          {% for row in categories|batch(3) %}
            <div class='row'>
          {% for categories in row %}
           <div class="col-md-4"> 
  
    
    <div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
    <div class="card-header">{{categories.nom}}</div>
    <div class="card-body">
         
        <h4 class="card-title">{{restaurants.specialite}}</h4>
        <p class="card-text">{{restaurants.localisation}}</p>
        
      <a href="{{path('app_gestion_restaurant',{'id':restaurants.id} )}}"  <button type="button"class="btn btn-success btn-lg btn-block">Gérer</button></a>
    </div>
    </div>
    </div>
        {% endfor %}
          </div>
        {% endfor %}
  {% else %}
       <p class="h1 mt-5 text-center">Aucune catégorie de plats pour {{restaurant.nom}} </br>Veuillez <a href="{{path('app_create_categorie',{'id':restaurant.id}) }}"> creer des catégories pour y ajouter de plats </a>
  {% endif %} 
 
{% endblock %}
