{% extends 'base.html.twig' %}

{% block title %}Gestion du meni{% endblock %}

{% block body %}
{% if restaurants|length > 0 %}
    
          {% for row in pins|batch(3) %}
            <div class='row'>
          {% for pin in row %}
              <div class="col-md-4">
                <article class=" pin rounded shadow center">
                  <div class="mw-100 overflow-hidden  rounded-top">
                      <a href="{{path('app_pin_show', {id:pin.id})}}">  
                      <img src="{{ (pin.imageName ? vich_uploader_asset(pin,'imageFile') : asset('build/images/placeholder.jpg')) | imagine_filter('images_medium')}}" 
                      class="w-100"  alt="{{pin.title}}"/>
                      </a>
                    </div> 
          
                    <h1 class="h5 pt-2git pl-3"><a href="{{ path('app_pin_show', {id:pin.id}) }}" class="text-secondary text-decration-none">{{pin.title}}</a></h1>
                    <p class="pl-3 pb-3"><small>submitted by {{pin.user.fullName}} {{pin.createdAt | ago }}</small></p>
          
                </article>
              </div>
        {% endfor %}
          </div>
        {% endfor %}
  {% else %}
       <p class="h1 mt-5 text-center">Aucune catégorie de plats </br>Veuillez creer des catégories pour y ajouter de plats<a href="{{path('app_pin_create')}}">Soyez le premier </a>
  {% endif %} 
{% endblock %}
