{% extends 'base.html.twig' %}

{% block title %}PLATS{% endblock %}

{% block body %}


 

{% if plats|length > 0 %}


{% for row in plats|batch(4) %}
    <div class="row mt-5" >
       {% for plats in row %}


        <div class="col-md-3 "> 
  
   
    <div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
    <div class="card-header">{{plats.nom}}</div>
    <div class="card-body">
         
        <h4 class="card-title">{{plats.prix}} Francs</h4>
         <img src="{{ (plats.imageName ? vich_uploader_asset(plats,'imageFile') : asset('build/images/images.jpg')) | imagine_filter('images_medium')}}"

        class="w-100 rounded-top"  alt="{{plats.nom}}"/>
        <p class="card-text">{{ plats.description ? plats.description : "Aucune description pour ce plat"}}</p>
        <p>
            <a href="#123"><img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/173024/caddie.png"/>
                <span class="texteduboutton_1">Ajouter au panier</span></a>
        </p>
    </div>
    </div>
    </div>
    
 {% endfor %}
 </div>
{% endfor %}
{% else %}
<p class="h1 mt-5 text-center">Aucun plats pour cette catégorie Veuillez contacter le gérant du restaurant</p>

{% endif %}
{% endblock %}