{% extends 'base.html.twig' %}

{% block title %}Menu {{restaurant.nom}}{% endblock %}

{% block body %}


 <h1 class="row justify-content-center mt-10"> CATEGORIES</h1>

{% if categorie|length > 0 %}

          {% for row in categorie|batch(3) %}
            <div class='row'>
          {% for categorie in row %}
           <div class="col-md-4 mt-5"> 
  
            <div class="row justify-content-center">

    <div class="card text-white bg-primary mb-3" style="max-width: 20rem;">

    <div class="card-header"><h3 class="ml-2">{{categorie.nom}}</h3></div>
         <a href="{{path('app_plat_menu_customer',{'restaurant':restaurant.id , 'categorie':categorie.id} )}}" >
            <div class="card-body">
        <img src="{{ (categorie.imageName ? vich_uploader_asset(categorie,'imageFile') : asset('build/images/images.jpg')) | imagine_filter('images_medium')}}" 
        class="w-100 rounded-top"  alt="{{categorie.nom}}"/>
        <h4 class="card-title">{{categorie.description}}</h4></a>
        

    </div>
    </div>
    </div>
    </div>
        {% endfor %}
          </div>
          
        {% endfor %}
        
  {% else %}
       <p class="h1 mt-5 text-center">Aucune cat√©gorie de plats pour {{restaurant.nom}} </p>
  {% endif %} 
 
{% endblock %}




