{% extends 'base.html.twig' %}

{% block title %}COMMANDES{% endblock %}

{% block body %}


 


<div class="jumbotron">

<h3 class='text-center'>COMMANDES DU RESTAURANT {{restaurant.nom|upper}}</h3>

</div>

{% if commandesByTable >= 1 %}


{% for row in commandesByTable|batch(4) %}
    
     
        
        {% for commande in row.commande.commande %}
            {% if commande.servi == false %}
    
        
    

    <div class="row mt-2" >
       
        <div class="col-md-3"> 
            

    <div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
    <div class="card-header text-center text-uppercase">TABLE {{commande.tableResto}}</div>
    <div class="card-body">
         
        
        <p class="card-text ">
       
                <p class="text-center">{{commande.quantity}} {{commande.nomPlat}} 
                        <a href="{{path('app_commande_servi',{commande:commande.id,restaurant:restaurant.id})}}">
                            <button class='btn-sm btn-info'>OK</button> 
                        </a>
                </p>

        
        </p>

    </div>
    </div>
    </div>

 
 </div>

 
            {% endif %}
            
        {% endfor %}
{% endfor %}

    
    


{% else %}
    <h3 class="text-center text-muted">Aucunes commandes pour l'instant </h3>

{% endif %}




{% endblock %}